    <!-- GoogleMapsApi -->
    %script{:type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=false"}
    %script{:type => "text/javascript"}
    :javascript
      $(document).ready(function(){
        var container_height = $("#container")[0].scrollHeight;
        var main_height = $("#main")[0].scrollHeight;
        var delta = 192 - (container_height % 192 || 192);
        $("#container").height(container_height + delta);
        $("#main").height(main_height + delta);
        with(google.maps){
          var pos = new LatLng(34.63827, 135.411279);
          var map = new Map(document.getElementById("map"), {
            zoom: 16,
            center: pos,
            mapTypeId: MapTypeId.ROADMAP});
          var marker = new Marker({
            position: pos,
            map: map,
            title: "KansaiRubyKaigi04"});
          marker.setMap(map);
        }
      })
